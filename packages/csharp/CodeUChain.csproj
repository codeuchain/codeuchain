<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>12.0</LangVersion>
    <PackageId>CodeUChain</PackageId>
    <Version>1.0.1</Version>
    <Authors>CodeUChain Team</Authors>
    <Description>A modular framework for chaining processing links with middleware support, following agape philosophy.</Description>
    <RepositoryUrl>https://github.com/codeuchain/codeuchain</RepositoryUrl>
    <PackageTags>chain,middleware,processing,framework</PackageTags>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="tests/**" />
    <Compile Remove="examples/**" />
    <Compile Remove="test-runner/**" />
  </ItemGroup>

</Project>